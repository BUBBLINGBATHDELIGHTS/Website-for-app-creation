NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key # Public client key used by the storefront for Supabase queries
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co # Public Supabase instance URL consumed by the client app
SUPABASE_ANON_KEY=service-role-or-anon # Optional server fallback when a service role is not provided
SUPABASE_URL=https://your-project.supabase.co # Server-side Supabase instance URL
SUPABASE_SERVICE_ROLE_KEY=service-role-key # Secure service role key for privileged API routes
REDIS_URL=redis://:password@localhost:6379 # Connection string for Redis caching (matches docker-compose)
REDIS_PASSWORD=password # Password required by the Redis container (used for health checks and clients)
REVALIDATE_API_KEY=your-revalidation-key # Shared secret for calling the /api/revalidate endpoint
