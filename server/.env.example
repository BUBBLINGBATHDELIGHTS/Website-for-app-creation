# Supabase Postgres connection string
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# Supabase project configuration for privileged server operations
SUPABASE_URL=https://[PROJECT_REF].supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Force SSL when running outside Supabase (optional)
PGSSLMODE=require

# Optional Stripe secret if you want to enable payment intents
# STRIPE_SECRET_KEY=sk_test_123

# Outbound email (leave SMTP_HOST blank to log emails instead)
# SMTP_HOST=smtp.postmarkapp.com
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-password
# SMTP_FROM=orders@bubblingbathdelights.com

# Allow cross-origin requests from your deployed frontend
# CLIENT_ORIGIN=https://yourdomain.com

# Optional domain and workspace review configuration
# WORKSPACE_ACCESS_EMAIL_DOMAIN=bubblingbathdelights.com

# Lock the API while developing the storefront
MAINTENANCE_MODE=true
PREVIEW_ACCESS_TOKEN=dev-preview-token
